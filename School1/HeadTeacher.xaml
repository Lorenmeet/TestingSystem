<Page x:Class="School1.HeadTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HeadTeacher">

    <Grid Background="#FFD8BAEA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <Button Click="GoToTeacher" Background="Lavender" Height="30" Margin="10,100,10,10" >Управление учителями</Button>
            <Button Click="GoToClass" Background="Lavender" Height="30" Margin="10,20,10,10" >Управление классами</Button>
            <Button Click="GoToStudent" Background="Lavender" Height="30" Margin="10,20,10,10" >Управление учениками</Button>
            <Button Click="GoToSubject" Background="Lavender" Height="30" Margin="10,20,10,10" >Управление диспицплинами</Button>
            
        </StackPanel>
        <Button Click="Button_Click" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Height="30" Width="100">Выйти</Button>
    </Grid>
</Page>
